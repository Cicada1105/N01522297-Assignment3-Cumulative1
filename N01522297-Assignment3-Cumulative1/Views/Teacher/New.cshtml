
@{
    ViewBag.Title = "New";
}

<h2>New Teacher</h2>

<form action="/Teacher/Create" method="POST">
    <div>
        <label for="first_name">First Name:</label>
        <input id="first_name" type="text" name="f_name" placeholder="Enter Value..." />
    </div>
    <div>
        <label for="last_name">Last Name:</label>
        <input id="last_name" type="text" name="l_name" placeholder="Enter Value..." />
    </div>
    <div>
        <label for="employee_number">Employee Number:</label>
        <!-- Pattern: Make sure the employee number starts with a "T" and is followed by 3 numbers -->
        <input id="employee_number" type="text" name="employee_num" pattern="T\d{3}" placeholder="Enter Value..." />
    </div>
    <div>
        <label for="date_of_hiring">Hire Date:</label>
        <input id="date_of_hiring" type="date" name="hire_date" />
    </div>
    <div>
        <label for="salary">Salary:</label>
        <input id="salary" type="number" name="salary" step="0.01" min="0" placeholder="0.00" />
    </div>
    <div>
        <input type="submit" value="Submit" />
    </div>
</form>